{
  "name": "deposit",
  "base": "PersistedModel",
  "idInjection": true,
  "mixins": {
    "TimeStamp": true,
    "SetupRemoteMethods": {
      "disableAllExcept": [
        "create",
        "tapjoy",
        "getRewardConfiguration"
      ]
    }
  },
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "externalId": {
      "type": "string",
      "required": true
    },
    "method": {
      "type": "string",
      "required": true
    },
    "amount": {
      "type": "number"
    },
    "userId": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "tapjoy"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getRewardConfiguration"
    }
  ],
  "methods": {
    "tapjoy": {
      "accepts": [
        {
          "arg": "id",
          "type": "string"
        },
        {
          "arg": "snuid",
          "type": "string"
        },
        {
          "arg": "currency",
          "type": "string"
        },
        {
          "arg": "mac_address",
          "type": "string"
        },
        {
          "arg": "display_multiplier",
          "type": "string"
        },
        {
          "arg": "verifier",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "result",
        "type": "object",
        "root": true
      },
      "description": "Grant reward from external source (tapjoy, appStore) for user",
      "http": {
        "verb": "get"
      }
    },
    "getRewardConfiguration": {
      "accepts": [
      ],
      "returns": {
        "arg": "result",
        "type": "object",
        "root": true
      },
      "description": "Get current reward configuration",
      "http": {
        "path":"/getRewardConfiguration",
        "verb": "get"
      }
    }
  }
}