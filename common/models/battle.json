{
  "name": "battle",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "status": {
      "type": "string",
      "required": true,
      "default": "pending"
    },
    "game": {
      "type": "string",
      "required": true
    },
    "stake": {
      "type": "number",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "challenger": {
      "type": "hasOne",
      "model": "user",
      "foreignKey": "challengerId",
      "options": {
        "nestRemoting": true
      }
    },
    "opponent": {
      "type": "hasOne",
      "model": "user",
      "foreignKey": "opponentId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [],
  "methods": {}
}
