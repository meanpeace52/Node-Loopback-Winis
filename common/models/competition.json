{
  "name": "competition",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true
  },
  "properties": {
    "prize": {
      "type": "string",
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "image": {
      "type": "string",
      "required": true
    },
    "state": {
      "type": "string",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "winner": {
      "type": "hasOne",
      "model": "user",
      "foreignKey": ""
    }
  },
  "acls": [],
  "methods": {
    "nearest": {
      "accepts": [],
      "returns": [
        {
          "arg": "competition",
          "type": "object",
          "root": true,
          "description": "Details of the current or next competition"
        }
      ],
      "description": "Return the current or next competition",
      "http": [
        {
          "path": "/nearest",
          "verb": "get"
        }
      ]
    },
    "pickWinner": {
      "accepts": [
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": [
        {
          "arg": "user",
          "type": "object",
          "root": true,
          "description": "The winner for the current competition"
        }
      ],
      "description": "Pick a winner for the current competition",
      "http": [
        {
          "path": "/pickWinner",
          "verb": "post"
        }
      ]
    }
  }
}