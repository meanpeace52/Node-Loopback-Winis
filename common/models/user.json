{
  "name": "user",
  "plural": "users",
  "base": "User",
  "idInjection": true,
  "mixins": {
    "TimeStamp": true
  },
  "properties": {
    "username": {
      "type": "string",
      "required": true,
      "index": {
        "unique": true
      }
    },
    "externalUserId": {
      "type": "string",
      "required": false
    },
    "externalAuthMethod": {
      "type": "string",
      "required": false
    },
    "phoneNumber": {
      "type": "string",
      "index": {
        "unique": true
      }
    },
    "winis": {
      "type": "number",
      "default": 10
    },
    "diamonds": {
      "type": "number",
      "default": 0
    },
    "spins": {
      "type": "number",
      "default": 1
    },
    "scratches": {
      "type": "number",
      "default": 0
    },
    "avatar": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "spinToWins": {
      "type": "hasMany",
      "model": "spinToWin",
      "foreignKey": "spinToWinId",
      "options": {
        "disableInclude": true
      }
    },
    "friends": {
      "type": "referencesMany",
      "model": "user",
      "foreignKey": "friendIds",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "authenticate"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "findByPhones"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "sendWinis"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "addFriends"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__friends"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__findById__friends"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__link__friends"
    }
  ],
  "methods": {
    "authenticate": {
      "accepts": [
        { "arg": "method", "type": "string", "require": true },
        { "arg": "credentials", "type": "object", "required": true, "http": { "source": "body" } }
      ],
      "returns": {
        "arg": "accessToken", "type": "object", "root": true,
        "description": "The response body contains properties of the AccessToken created on login.\n Depending on the value of `include` parameter, the body may contain additional properties:\n\n  - `user` - `{User}` - Data of the currently logged in user. (`include=user`)\n\n"
      },
      "description": "Authenticate a user.",
      "http": { "path": "/authenticate/:method", "verb": "post" }
    },
    "findByPhones": {
      "accepts": [
        { "arg": "numbers", "type": "array", "require": true, "http": { "source": "body" } }
      ],
      "returns": {
        "arg": "result", "type": "object", "root": true,
        "description": "Return all the users found by the phone numbers uploaded"
      }
    },
    "prototype.sendWinis": {
      "accepts": [
        { "arg": "amount", "type": "number", "require": true },
        { "arg": "options", "type": "object", "http": "optionsFromRequest" }
      ],
      "returns": {
        "arg": "result", "type": "object", "root": true,
        "description": "Return the result of the operation and the two users after update"
      },
      "http": { "verb": "post", "path": "/sendWinis/:amount" }
    }
  }
}
