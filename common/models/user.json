{
  "name": "user",
  "plural": "users",
  "base": "User",
  "idInjection": true,
  "mixins": {
    "TimeStamp": true
  },
  "properties": {
    "username": {
      "type": "string",
      "required": true,
      "index": {
        "unique": true
      }
    },
    "externalUserId": {
      "type": "string",
      "required": false
    },
    "externalAuthMethod": {
      "type": "string",
      "required": false
    },
    "phoneNumber": {
      "type": "string",
      "index": {
        "unique": true
      }
    },
    "winis": {
      "type": "number",
      "default": 10
    },
    "staked": {
      "type": "number",
      "default": 0
    },
    "diamonds": {
      "type": "number",
      "default": 0
    },
    "spins": {
      "type": "number",
      "default": 1
    },
    "scratches": {
      "type": "number",
      "default": 0
    },
    "avatar": {
      "type": "string",
      "default": "default"
    },
    "devkit": {
      "type": "boolean",
      "default": false
    },
    "timezone": {
      "type": "string",
      "default": "Europe/London"
    },
    "lastDailySpinGrantingDate": {
      "type": "date",
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "spinToWins": {
      "type": "hasMany",
      "model": "spinToWin",
      "foreignKey": "spinToWinId",
      "options": {
        "disableInclude": true
      }
    },
    "friends": {
      "type": "referencesMany",
      "model": "user",
      "foreignKey": "friendIds",
      "options": {
        "nestRemoting": true
      }
    },
    "pending": {
      "type": "referencesMany",
      "model": "user",
      "foreignKey": "pendingIds",
      "options": {
        "nestRemoting": true
      }
    },
    "blocked": {
      "type": "referencesMany",
      "model": "user",
      "foreignKey": "blockedIds",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "authenticate"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "findByPhones"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "sendWinis"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__friends"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__findById__friends"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__link__friends"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__unlink__friends"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__pending"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__findById__pending"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__link__pending"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__unlink__pending"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__blocked"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__findById__blocked"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__link__blocked"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__unlink__blocked"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "setAvatar"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getDefaultAvatar"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getDefaultResizedAvatar"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getResizedAvatar"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "findByUsername"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "freeSpins"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getShareImage"
    }
  ],
  "methods": {
    "authenticate": {
      "accepts": [
        {
          "arg": "method",
          "type": "string",
          "require": true
        },
        {
          "arg": "credentials",
          "type": "object",
          "required": true,
          "http": {
            "source": "body"
          }
        }
      ],
      "returns": {
        "arg": "accessToken",
        "type": "object",
        "root": true,
        "description": "The response body contains properties of the AccessToken created on login.\n Depending on the value of `include` parameter, the body may contain additional properties:\n\n  - `user` - `{User}` - Data of the currently logged in user. (`include=user`)\n\n"
      },
      "description": "Authenticate a user.",
      "http": {
        "path": "/authenticate/:method",
        "verb": "post"
      }
    },
    "findByPhones": {
      "accepts": [
        {
          "arg": "numbers",
          "type": [
            "string"
          ],
          "require": true,
          "http": {
            "source": "body"
          }
        }
      ],
      "returns": {
        "arg": "result",
        "type": "object",
        "root": true,
        "description": "Return all the users found by the phone numbers uploaded"
      }
    },
    "findByUsername": {
      "accepts": [
        {
          "arg": "username",
          "type": "string",
          "require": true
        }
      ],
      "returns": {
        "arg": "user",
        "type": "object",
        "root": true,
        "description": "Returns a user by username"
      },
      "http": {
        "verb": "get",
        "path": "/findByUsername/:username"
      }
    },
    "prototype.setAvatar": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        },
        {
          "arg": "res",
          "type": "object",
          "http": {
            "source": "res"
          }
        }
      ],
      "returns": {
        "arg": "result",
        "type": "object",
        "root": true,
        "description": "Update user's avatar"
      },
      "http": {
        "path": "/avatar",
        "verb": "post"
      }
    },
    "prototype.getDefaultAvatar": {
      "returns": [
        {
          "arg": "avatar",
          "type": "file",
          "root": true
        },
        {
          "arg": "Content-Type",
          "type": "string",
          "http": {
            "target": "header"
          }
        },
        {
          "arg": "Cache-Control",
          "type": "string",
          "root": false,
          "description": "How long to store the image in cache",
          "http": {
            "target": "header"
          }
        }
      ],
      "http": {
        "path": "/avatar.jpg",
        "verb": "get"
      }
    },
    "prototype.getResizedAvatar": {
      "accepts": [
        {
          "arg": "timestamp",
          "type": "string"
        },
        {
          "arg": "size",
          "type": "string"
        }
      ],
      "returns": [
        {
          "arg": "avatar",
          "type": "file",
          "root": true
        },
        {
          "arg": "Content-Type",
          "type": "string",
          "http": {
            "target": "header"
          }
        },
        {
          "arg": "Cache-Control",
          "type": "string",
          "root": false,
          "description": "How long to store the image in cache",
          "http": {
            "target": "header"
          }
        }
      ],
      "http": {
        "path": "/avatar/:timestamp/:size/avatar.jpg",
        "verb": "get"
      }
    },
    "prototype.getDefaultResizedAvatar": {
      "accepts": [
        {
          "arg": "size",
          "type": "string"
        }
      ],
      "returns": [
        {
          "arg": "avatar",
          "type": "file",
          "root": true
        },
        {
          "arg": "Content-Type",
          "type": "string",
          "http": {
            "target": "header"
          }
        },
        {
          "arg": "Cache-Control",
          "type": "string",
          "root": false,
          "description": "How long to store the image in cache",
          "http": {
            "target": "header"
          }
        }
      ],
      "http": {
        "path": "/avatar/:size/avatar.jpg",
        "verb": "get"
      }
    },
    "prototype.sendWinis": {
      "accepts": [
        {
          "arg": "amount",
          "type": "number",
          "require": true
        },
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": {
        "arg": "result",
        "type": "object",
        "root": true,
        "description": "Return the result of the operation and the two users after update"
      },
      "http": {
        "verb": "post",
        "path": "/sendWinis/:amount"
      }
    },
    "prototype.freeSpins": {
      "accepts": [
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": {
        "arg": "result",
        "type": "object",
        "root": true,
        "description": "Return the amount of gained spins"
      },
      "http": {
        "verb": "post",
        "path": "/freeSpins/"
      }
    },
    "prototype.getShareImage": {
      "accepts": [
        {
          "arg": "type",
          "type": "string",
          "required": false,
          "description": "Instagram or general share image"
        },
        {
          "arg": "game",
          "type": "string",
          "required": false,
          "description": "The type of game this user has won"
        }
      ],
      "returns": [
        {
          "arg": "image",
          "type": "file",
          "root": true,
          "description": "The returned winner image"
        },
        {
          "arg": "Content-Type",
          "type": "string",
          "root": false,
          "description": "The content type of the returned file",
          "http": {
            "target": "header"
          }
        },
        {
          "arg": "Cache-Control",
          "type": "string",
          "root": false,
          "description": "How long to store the image in cache",
          "http": {
            "target": "header"
          }
        }
      ],
      "description": "Generate and return an image for social media posting",
      "http": [
        {
          "path": "/share/:game/winner.jpg",
          "verb": "get"
        },
        {
          "path": "/share/:type/:game/winner.jpg",
          "verb": "get"
        }
      ]
    }
  }
}
