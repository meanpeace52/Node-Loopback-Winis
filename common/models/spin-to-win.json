{
  "name": "spinToWin",
  "plural": "spinsToWin",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true,
    "SetupRemoteMethods": {
      "disableAllExcept": [
        "spin"
      ]
    }
  },
  "properties": {
    "spinResult": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "hasOne",
      "model": "user",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "spin"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": {
    "spin": {
      "accepts": [
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": {
        "arg": "result",
        "type": "object",
        "root": true
      },
      "description": "Get the result of a spin-to-win spin for this user, and update user model",
      "http": {
        "verb": "post"
      }
    }
  }
}
