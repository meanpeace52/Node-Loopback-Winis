{
  "name": "scratch",
  "plural": "scratches",
  "base": "PersistedModel",
  "idInjection": true,
  "mixins": {
    "TimeStamp": true,
    "SetupRemoteMethods": {
      "disableAllExcept": [
        "generate",
        "prototype.validate"
      ]
    }
  },
  "properties": {
    "board": {
      "type": "array",
      "required": true
    },
    "userId": {
      "type": "string",
      "required": true
    },
    "prize": {
      "type": "string",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "hasOne",
      "model": "user",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "scratch"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "reveal"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": {
    "scratch": {
      "accepts": [
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": {
        "arg": "scratch",
        "type": "object",
        "root": true
      },
      "description": "Creates Scratch object",
      "http": {
        "verb": "post",
        "path": "/"
      }
    },
    "prototype.reveal": {
      "accepts": [
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": {
        "arg": "scratch",
        "type": "object",
        "root": true
      },
      "description": "Reveals current Scratch. User receives prize instantly",
      "http": {
        "verb": "post",
        "path": "/reveal"
      }
    }
  }
}
